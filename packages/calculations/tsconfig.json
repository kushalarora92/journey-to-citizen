{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "lib": ["ES2017", "DOM"],
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "composite": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"],
  "references": [
    { "path": "../types" }
  ]
}
